<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_background">


    <TextView
        android:id="@+id/playTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Controversy."
        android:fontFamily="@font/josefin_sans_bold"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50sp"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/playDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playTextView"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        android:text="The argument based party game."
        android:fontFamily="@font/josefin_sans_bold"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="27sp"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/playTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/playButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/play_button"
            android:text="Play"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/josefin_sans_bold"
            android:textSize="20sp"

            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/onboardingButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/instructions_button"
            android:text="Instructions"
            android:textAllCaps="false"
            android:fontFamily="@font/josefin_sans_bold"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>