<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocietyActivity"
    android:background="#2F195F">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/card1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chooseTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.1"
        >

        <TextView
            android:id="@+id/selectCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Society"
            android:textSize="40sp"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toStartOf="@+id/roundTextView"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/roundTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/josefin_sans_light_italic"
            android:text="Round 1"
            android:textSize="20sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/selectCardTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/chooseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="@font/josefin_sans"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintBottom_toTopOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#272CC6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/chooseTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card2"
        android:theme="@style/Widget.MaterialComponents.CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/card1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/card1Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/josefin_sans_light_italic"
                android:textColor="#ffffff"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="20dp"
                android:maxLines="3"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/card1AgreeButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_unclicked_society"
                    android:text="Agree"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/card1DisagreeButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_unclicked_society"
                    android:text="Disagree"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#272CC6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card3"
        android:theme="@style/Widget.MaterialComponents.CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/card2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/card2Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/josefin_sans_light_italic"
                android:textColor="#ffffff"
                android:layout_marginEnd="30dp"
                android:maxLines="3"
                android:layout_marginStart="20dp"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/card2AgreeButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_unclicked_society"
                    android:text="Agree"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/card2DisagreeButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_unclicked_society"
                    android:text="Disagree"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#272CC6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/Widget.MaterialComponents.CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/card3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans_bold"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/card3Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/josefin_sans_light_italic"
                android:textColor="#ffffff"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="20dp"
                android:maxLines="3"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/card3AgreeButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_unclicked_society"
                    android:text="Agree"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/card3DisagreeButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_unclicked_society"
                    android:text="Disagree"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/selectCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button2"
        android:text="Confirm Choices"
        android:textAllCaps="false"
        android:fontFamily="@font/josefin_sans_bold"
        android:textSize="22sp"
        android:textColor="#66ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>